<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Список друзей</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>
<section class="py-5">
    <div class="container">
        <div class="d-flex flex-column">
            <h1>Получить список друзей</h1>
            <form action="/friends" method="POST">
                <div class="row">
                    <div class="col-9">
                        <div class="form-floating mb-3">
                            <input value="" name="userAccessToken" type="text" class="form-control" readonly>
                            <label>Ваш токен</label>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-floating mb-3">
                            <input value="" name="ownerId" type="text" class="form-control" readonly>
                            <label>Ваш id</label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    Получить список ваших друзей
                </button>
            </form>
        </div>
    </div>
</section>


<script defer>

    // функция для получения параметров из URL строки
    function getParams(url, p) {
        return url.hash.substr(1).split('&').find(function (param) {
            return param.startsWith(`${p}=`);
        }).split('=')[1];
    }
    // Получение URL-адреса с расположения страницы
    var url = window.location.href;
    // Создание объекта URL для разбора URL-адреса
    var parsedUrl = new URL(url);
    // Извлечение значения access_token из параметров URL
    var accessToken = getParams(parsedUrl, 'access_token');
    var ownerId = getParams(parsedUrl, 'user_id');
    document.querySelector('input[name="userAccessToken"]').value = accessToken;
    document.querySelector('input[name="ownerId"]').value = ownerId;
</script>
</body>
</html>
